{
  "name": "yamag",
  "version": "1.0.0",
  "description": "Yet Another Misskey Accuracy Game app",
  "main": "index.js",
  "scripts": {
    "start": "node --dns-result-order=ipv4first ./dist/index.js",
    "remind": "node --dns-result-order=ipv4first ./dist/post_remind.js",
    "mentions": "node --dns-result-order=ipv4first ./dist/mentions.js",
    "build": "tsc && tsc-alias",
    "build:watch": "tsc && (concurrently \"tsc -w\" \"tsc-alias -w\")",
    "test": "echo \"Error: no test specified\" && exit 1",
    "generate": "pnpm prisma generate",
    "migrate": "pnpm prisma migrate deploy",
    "dev": "cross-env NODE_ENV=development ts-node ./src/index.ts",
    "remind-dev": "cross-env NODE_ENV=development ts-node ./src/post_remind.ts",
    "mentions-dev": "cross-env NODE_ENV=development dotenv -e .env.development ts-node ./src/mentions.ts",
    "migrate-dev": "dotenv -e .env.development pnpm dlx prisma migrate dev"
  },
  "keywords": [],
  "author": "",
  "license": "MPL-2.0",
  "devDependencies": {
    "@types/async-retry": "^1.4.5",
    "@types/node": "^20.2.3",
    "@types/ws": "^8.5.4",
    "cross-env": "^7.0.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript-transform-paths": "^3.4.6"
  },
  "dependencies": {
    "@prisma/client": "5.0.0",
    "async-retry": "^1.3.3",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^7.2.1",
    "misskey-js": "^0.0.15",
    "prisma": "^5.0.0",
    "tsc-alias": "^1.8.6",
    "typescript": "^5.0.4",
    "ws": "^8.13.0"
  }
}
